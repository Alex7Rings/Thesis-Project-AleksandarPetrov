@{
    ViewData["Title"] = "Car Images - Upload Image";
}

<div class="upload-container">
    <h1>Качване на изображение за класификация на автомобили</h1>

    <form method="post" enctype="multipart/form-data" asp-controller="CarImages" asp-action="ClassifyImage">
        <div class="form-group">
            <label for="file-upload" class="form-label">Изберете изображение:</label>
            <input type="file" id="file-upload" name="file" class="form-control" accept="image/*" />
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Зареждане</button>
        </div>
    </form>
</div>


