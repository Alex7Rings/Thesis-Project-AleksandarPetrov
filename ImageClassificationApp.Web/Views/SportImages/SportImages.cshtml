@{
    ViewData["Title"] = "Spoty Images - Upload Image";
}

<div class="upload-container">
    <h1>Upload an Image for Classification</h1>

    <form method="post" enctype="multipart/form-data" asp-controller="SportImages" asp-action="ClassifyImage">
        <div class="form-group">
            <label for="file" class="form-label">Choose an image to classify:</label>
            <input type="file" id="file" name="file" class="form-control" />
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Upload</button>
        </div>
    </form>
</div>
